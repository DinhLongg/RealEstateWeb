@model RealEstateWeb.Models.ViewModels.Admin.EditUserRolesViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Phân quyền người dùng";
}

<h4>Phân quyền: @Model.UserName</h4>
<form asp-action="EditRoles" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
        @foreach (var r in Model.AllRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="@r.Selected" value="true" checked="@(r.Selected ? "checked" : null)" />
                <label class="form-check-label">@r.RoleName</label>
            </div>
        }
    </div>
    <button class="btn btn-primary">Lưu quyền</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Hủy</a>
</form>
