@model RealEstateWeb.Models.ViewModels.Admin.EditUserRolesViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Phân quyền người dùng";
}

<h4>Phân quyền: @Model.UserName</h4>

<form asp-action="EditRoles" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        @for (int i = 0; i < Model.AllRoles.Count; i++)
        {
            <div class="form-check">
                <input class="form-check-input"
                       asp-for="AllRoles[@i].Selected"
                       type="checkbox"
                       value="true" />
                <input type="hidden" asp-for="AllRoles[@i].RoleName" />
                <label class="form-check-label">@Model.AllRoles[i].RoleName</label>
            </div>
        }
    </div>

    <button class="btn btn-primary">Lưu quyền</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Hủy</a>
</form>
