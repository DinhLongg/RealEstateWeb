@model RealEstateWeb.Models.Property
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Sửa sản phẩm";
}

<h3>Sửa sản phẩm</h3>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="row g-3">
        <!-- same fields as Create -->
        <div class="col-md-6">
            <label class="form-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Giá</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label class="form-label">Ảnh hiện tại</label>
            <div>
                <img src="@Url.Content(Model.ImageUrl ?? "~/img/placeholder.png")" style="max-width:220px;max-height:140px;object-fit:cover;border-radius:6px" />
            </div>
        </div>

        <div class="col-md-6">
            <label class="form-label">Thay ảnh (upload mới)</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <div class="col-12">
            <button class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Hủy</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
