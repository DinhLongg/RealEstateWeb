@model IEnumerable<RealEstateWeb.Models.Property>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";

    // CHANGED: lấy giá trị an toàn từ ViewBag
    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int total = ViewBag.Total ?? 0;
    string q = ViewBag.Query ?? "";
    int totalPages = (int)Math.Ceiling(total / (double)pageSize);

    // CHANGED: tính thông tin hiển thị
    int startItem = total == 0 ? 0 : ((page - 1) * pageSize) + 1;
    int endItem = Math.Min(total, page * pageSize);

    // CHANGED: giới hạn số trang hiển thị trong pager
    int maxPagesToShow = 7;
    int startPage = Math.Max(1, page - maxPagesToShow / 2);
    int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);
    if (endPage - startPage + 1 < maxPagesToShow) startPage = Math.Max(1, endPage - maxPagesToShow + 1);
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Danh sách sản phẩm</h3>
        <small class="text-muted">Tổng: <strong>@total</strong> &middot; Hiển thị <strong>@startItem</strong> - <strong>@endItem</strong></small>
    </div>

    <div class="d-flex align-items-center">
        @* CHANGED: form tìm kiếm + chọn pageSize (GET) *@
        <form class="row g-2 align-items-center me-3" method="get" asp-area="Admin" asp-controller="Product" asp-action="Index">
            <div class="col-auto">
                <input name="q" value="@q" class="form-control form-control-sm" placeholder="Tìm theo tên / địa chỉ..." />
            </div>
            <div class="col-auto">
                <select name="pageSize" class="form-select form-select-sm" aria-label="Số hàng / trang" onchange="this.form.submit()">
                    <option value="5" selected="@(pageSize == 5 ? "selected" : null)">5 / trang</option>
                    <option value="10" selected="@(pageSize == 10 ? "selected" : null)">10 / trang</option>
                    <option value="20" selected="@(pageSize == 20 ? "selected" : null)">20 / trang</option>
                    <option value="50" selected="@(pageSize == 50 ? "selected" : null)">50 / trang</option>
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-sm btn-outline-primary" type="submit"><i class="fa fa-search me-1"></i>Tìm</button>
            </div>
        </form>

        @* CHANGED: link tạo mới rõ ràng + area/controller *@
        <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fa fa-plus me-1"></i> Thêm sản phẩm
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:100px">Ảnh</th>
                    <th>Tiêu đề / Thông tin</th>
                    <th style="width:160px">Giá</th>
                    <th>Địa chỉ</th>
                    <th style="width:200px">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model?.Any() ?? true)
                {
                    <tr>
                        <td colspan="5" class="text-center py-4">
                            <div class="text-muted">Không có sản phẩm thỏa mãn.</div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img src="@Url.Content(item.ImageUrl ?? "~/img/placeholder.png")"
                                     alt="@item.Title"
                                     style="width:90px;height:64px;object-fit:cover;border-radius:6px"
                                     onerror="this.src='@Url.Content("~/img/placeholder.png")'" />
                            </td>
                            <td>
                                <div class="fw-semibold">@item.Title</div>
                                <div class="small text-muted mt-1">@item.Type &nbsp;•&nbsp; <span class="badge bg-secondary">@item.Status</span></div>
                                <div class="small text-muted mt-2">
                                    @(
                                                                string.IsNullOrWhiteSpace(item.Description) ? item.Address : item.Description.Length > 120 ? item.Description.Substring(0, 120) + "..." : item.Description
                                                                )
                        </div>
                    </td>
                    <td class="text-primary fw-bold align-middle">@item.Price.ToString("N0")</td>
                    <td class="text-muted align-middle">@item.Address</td>
                    <td class="align-middle">
                        <div class="d-flex gap-2">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Xem chi tiết">
                                <i class="fa fa-eye"></i>
                            </a>

                                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white" title="Sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    @* CHANGED: dùng form POST cho Delete (ActionName("Delete") trong controller) *@
                                    <form asp-area="Admin" asp-controller="Product" asp-action="Delete" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(this.form)" title="Xóa">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                                }
                }
            </tbody>
        </table>
    </div>
</div>

@* CHANGED: phân trang đẹp, giữ query và pageSize *@
@if (totalPages > 1)
{
    <nav class="mt-3" aria-label="Phân trang">
        <ul class="pagination justify-content-center mb-0">
            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-area="Admin"
                   asp-controller="Product"
                   asp-action="Index"
                   asp-route-page="@(page - 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-q="@q">
                    &laquo; Trước
                </a>
            </li>

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link"
                       asp-area="Admin"
                       asp-controller="Product"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@pageSize"
                       asp-route-q="@q">@i</a>
                </li>
            }

            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-area="Admin"
                   asp-controller="Product"
                   asp-action="Index"
                   asp-route-page="@(page + 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-q="@q">
                    Tiếp &raquo;
                </a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        // CHANGED: confirm delete
        function confirmDelete(form) {
            if (!form) return;
            if (confirm('Bạn có chắc muốn xóa sản phẩm này? Hành động không thể hoàn tác.')) {
                form.submit();
            }
        }
    </script>
}
