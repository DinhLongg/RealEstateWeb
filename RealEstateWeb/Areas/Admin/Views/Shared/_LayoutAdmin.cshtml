@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<RealEstateWeb.Models.ApplicationUser> SignInManager
@inject UserManager<RealEstateWeb.Models.ApplicationUser> UserManager

@{
    Layout = null;
    var currentUser = UserManager.GetUserAsync(User).GetAwaiter().GetResult();
    var displayName = currentUser?.FullName ?? User.Identity?.Name ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --sidebar-bg: #0f1724;
            --accent: #0d6efd;
            --muted: #6c757d;
        }

        html, body {
            height: 100%;
        }

        .admin-shell {
            min-height: 100vh;
            display: flex;
            background: #f5f7fa;
        }

        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg,var(--sidebar-bg) 0%, #111827 100%);
            color: #e6eef8;
            padding: 20px 0;
            position: fixed;
            height: 100vh;
            overflow: auto;
        }

        .brand {
            font-weight: 700;
            letter-spacing: 0.2px;
            color: #fff;
            font-size: 1.1rem;
        }

        .nav-link-admin {
            color: #cfe7ff;
            padding: 12px 20px;
            display: block;
            border-radius: 8px;
            margin: 4px 10px;
        }

            .nav-link-admin:hover, .nav-link-admin.active {
                background: rgba(255,255,255,0.06);
                color: #fff;
                text-decoration: none;
            }

        .admin-main {
            margin-left: 260px;
            flex: 1;
            min-height: 100vh;
        }

        .topbar {
            background: #fff;
            border-bottom: 1px solid #e6eef8;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .card-hero {
            background: linear-gradient(90deg,#ffffff,#f8fafc);
            border-radius: 12px;
            padding: 18px;
            box-shadow: 0 8px 20px rgba(18,24,40,0.06);
        }

        .table-actions a {
            margin-right: 6px;
        }

        footer {
            padding: 20px;
            color: var(--muted);
            text-align: center;
            font-size: 0.9rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-shell">
        <aside class="admin-sidebar">
            <div class="px-3 mb-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                    <img src="~/img/icon-deal.png" style="width:38px;height:38px;border-radius:6px;margin-right:10px" alt="logo" />
                    <div>
                        <div class="brand">Dinh Long Admin</div>
                        <small class="text-muted">Quản trị hệ thống</small>
                    </div>
                </a>
            </div>

            <nav class="mt-4">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="fa fa-tachometer-alt me-2"></i> Dashboard
                </a>
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">
                    <i class="fa fa-boxes-stacked me-2"></i> Quản lý sản phẩm
                </a>
                <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Employee" ? "active" : "")">
                    <i class="fa fa-user-tie me-2"></i> Quản lý nhân viên
                </a>
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")">
                    <i class="fa fa-users-cog me-2"></i> Quản lý tài khoản
                </a>

                <hr style="border-color: rgba(255,255,255,0.04); margin:14px 10px" />

                <a asp-controller="Home" asp-action="Index" class="nav-link-admin">
                    <i class="fa fa-globe me-2"></i> Về trang public
                </a>
            </nav>

            <div class="px-3 mt-4">
                <div class="card-hero">
                    <div class="d-flex align-items-center">
                        <img src="~/img/icon-deal.png" style="width:44px;height:44px;border-radius:8px;margin-right:12px" alt="u" />
                        <div>
                            <div class="fw-bold" style="color:#fff">@displayName</div>
                            <small class="text-muted">Admin</small>
                        </div>
                    </div>

                    <div class="mt-3 d-grid">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-grid">
                            <button type="submit" class="btn btn-outline-light btn-sm">Đăng xuất</button>
                        </form>

                    </div>
                </div>
            </div>
        </aside>

        <main class="admin-main">
            <div class="topbar">
                <div class="d-flex align-items-center">
                    <button class="btn btn-link d-md-none" id="sidebarToggle"><i class="fa fa-bars"></i></button>
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                </div>
                <div class="d-flex align-items-center">
                    <div class="me-3 text-muted small">Chào, <strong>@displayName</strong></div>
                </div>
            </div>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>

            <footer>
                © @DateTime.Now.Year — Dinh Long Real Estate · Admin Panel
            </footer>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle')?.addEventListener('click', function () {
            document.querySelector('.admin-sidebar').classList.toggle('collapsed');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
