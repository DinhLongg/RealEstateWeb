@model RealEstateWeb.Models.Property

<div class="card property-card h-100 shadow-sm border-0">
    <div class="position-relative">
        <a asp-controller="Property" asp-action="Details" asp-route-id="@Model.Id">
            <img class="card-img-top" src="@Url.Content(Model.ImageUrl ?? "~/img/placeholder.png")"
                 style="height:200px; object-fit:cover;"
                 alt="@Model.Title"
                 onerror="this.src='@Url.Content("~/img/placeholder.png")'" />
        </a>

        <div class="badge bg-primary text-white position-absolute top-0 start-0 m-3">
            @Model.Status
        </div>
        @if (!string.IsNullOrWhiteSpace(Model.Type))
        {
            <div class="badge bg-white text-primary position-absolute bottom-0 start-0 m-3 rounded-top px-2">
                @Model.Type
            </div>
        }
    </div>

    <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-1">
            <a asp-controller="Property" asp-action="Details" asp-route-id="@Model.Id" class="text-dark text-decoration-none">
                @Model.Title
            </a>
        </h5>
        <p class="text-muted small mb-2">@Model.Address</p>

        <div class="mb-2">
            <span class="fw-bold text-primary">@Model.Price.ToString("N0") ₫</span>
        </div>

        <p class="card-text text-muted small text-truncate" style="max-height:3.6rem;">
            @Model.Description
        </p>

        <div class="mt-auto d-flex gap-2 align-items-center">
            <a asp-controller="Property" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary flex-grow-1">
                Xem chi tiết
            </a>

            <form asp-controller="Cart" asp-action="Add" method="post" class="m-0 d-inline-block">
                @Html.AntiForgeryToken()
                <input type="hidden" name="propertyId" value="@Model.Id" />
                <button type="submit" class="btn btn-sm btn-outline-success">
                    <i class="fa fa-shopping-cart me-1"></i>Thêm
                </button>
            </form>
        </div>
    </div>

    <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
        <small class="text-muted">ID: @Model.Id</small>
        <small class="text-muted">@Model.Size m² · @Model.Bed Bed · @Model.Bath Bath</small>
    </div>
</div>
