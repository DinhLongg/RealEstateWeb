@model IEnumerable<RealEstateWeb.Models.Property>
@{
    ViewData["Title"] = "For Sale - Real Estate";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string location = ViewBag.Location ?? "";
    string name = ViewBag.Name ?? "";
    string address = ViewBag.Address ?? "";
    string sort = ViewBag.Sort ?? "";
}

<div class="container my-5">
    <!-- Tiêu đề -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Real Estate for Sale</h1>
            <small class="text-muted">Các bất động sản đang được rao bán</small>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Xem tất cả</a>
    </div>

    <!-- 🔹 Thanh tìm kiếm (Mới thêm) -->
    <form method="get" class="row g-2 mb-4">
        <div class="col-md-4">
            <input type="text" name="name" value="@name" class="form-control" placeholder="🔍 Tìm theo tên..." />
        </div>
        <div class="col-md-4">
            <input type="text" name="address" value="@address" class="form-control" placeholder="📍 Tìm theo địa điểm..." />
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <span class="input-group-text">💰</span>
                <select name="sort" class="form-select">
                    <option value="">Sắp xếp mặc định</option>
                    <option value="price_asc" selected="@(sort == "price_asc")">Giá tăng dần</option>
                    <option value="price_desc" selected="@(sort == "price_desc")">Giá giảm dần</option>
                </select>
            </div>
        </div>
        <div class="col-md-1 d-grid">
            <button type="submit" class="btn btn-primary">Lọc</button>
        </div>
    </form>

    <!-- Danh sách -->
    <div class="row g-4">
        @if (!Model?.Any() ?? true)
        {
            <div class="col-12">
                <div class="alert alert-info">Không tìm thấy bất động sản đang bán.</div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(item.ImageUrl ?? "~/img/placeholder.png")"
                             class="card-img-top"
                             style="height:220px; object-fit:cover;"
                             alt="@item.Title"
                             onerror="this.src='@Url.Content("~/img/placeholder.png")'" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-1">@item.Title</h5>
                            <p class="text-muted small mb-2">@item.Address</p>
                            <div class="mb-2">
                                <span class="fw-bold text-primary">@item.Price.ToString("N0")</span>
                            </div>
                            <p class="card-text text-muted small text-truncate">@item.Description</p>
                            <div class="mt-auto d-flex justify-content-between align-items-center pt-3">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Xem chi tiết</a>
                                <form asp-controller="Cart" asp-action="Add" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="propertyId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-success"><i class="fa fa-shopping-cart me-1"></i>Thêm</button>
                                </form>
                            </div>
                            <div class="card-footer bg-transparent">
                                <small class="text-muted">ID: @item.Id</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Sale"
                           asp-route-page="@i"
                           asp-route-name="@name"
                           asp-route-location="@location"
                           asp-route-sort="@sort">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
