@model RealEstateWeb.Models.ViewModels.Manage.ManageProfileViewModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a class="list-group-item list-group-item-action active" data-bs-toggle="tab" href="#profileTab">
                    <i class="fa fa-user me-2"></i> Hồ sơ
                </a>
                <a class="list-group-item list-group-item-action" data-bs-toggle="tab" href="#passwordTab">
                    <i class="fa fa-lock me-2"></i> Đổi mật khẩu
                </a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="tab-content">
                        <!-- Tab 1: Hồ sơ -->
                        <div class="tab-pane fade show active" id="profileTab">
                            <h4 class="mb-3">Thông tin cá nhân</h4>
                            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="UserId" />
                                <div class="mb-3">
                                    <label class="form-label">Họ tên</label>
                                    <input asp-for="FullName" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" readonly />
                                </div>
                                <div class="mb-3 d-flex align-items-center">
                                    <img src="@Model.AvatarUrl ?? " /img/placeholder.png"" style="width:80px;height:80px;border-radius:50%;object-fit:cover;margin-right:15px" />
                                    <input asp-for="AvatarFile" type="file" class="form-control" />
                                </div>
                                <button class="btn btn-primary"><i class="fa fa-save me-1"></i> Lưu thay đổi</button>
                            </form>
                        </div>
                        <!-- Tab 2: Đổi mật khẩu -->
                        <div class="tab-pane fade" id="passwordTab">
                            <h4 class="mb-3">Đổi mật khẩu</h4>
                            <form asp-action="ChangePassword" method="post">
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    <label class="form-label">Mật khẩu hiện tại</label>
                                    <input asp-for="CurrentPassword" type="password" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Mật khẩu mới</label>
                                    <input asp-for="NewPassword" type="password" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Xác nhận mật khẩu mới</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                </div>
                                <button class="btn btn-primary"><i class="fa fa-key me-1"></i> Đổi mật khẩu</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3">@TempData["Error"]</div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
