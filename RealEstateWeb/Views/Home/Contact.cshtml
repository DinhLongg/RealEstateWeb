@{
    ViewData["Title"] = "Liên hệ";
}
@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
}

<section class="contact-hero py-5 text-center text-white">
    <div class="container">
        <h1 class="display-4 fw-bold">Liên hệ với chúng tôi</h1>
        <p class="lead">Chúng tôi luôn sẵn sàng hỗ trợ bạn</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6">
                <h4>Gửi tin nhắn</h4>
                <form method="post" asp-controller="Contact" asp-action="Send">
                    <div class="mb-3">
                        <input type="text" name="Name" class="form-control" placeholder="Tên của bạn" required />
                    </div>
                    <div class="mb-3">
                        <input type="email" name="Email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="mb-3">
                        <textarea name="Message" class="form-control" placeholder="Nội dung" rows="5" required></textarea>
                    </div>
                    <button class="btn btn-primary">Gửi đi</button>
                </form>
            </div>
            <div class="col-md-6">
                <h4>Thông tin liên hệ</h4>
                <p><i class="fa fa-map-marker-alt text-primary me-2"></i>123 Nguyễn Trãi, Hà Nội</p>
                <p><i class="fa fa-phone text-primary me-2"></i>+84 123 456 789</p>
                <p><i class="fa fa-envelope text-primary me-2"></i>support@example.com</p>
                <iframe class="w-100 rounded" height="300" src="https://www.google.com/maps/embed?..."></iframe>
            </div>
        </div>
    </div>
</section>
