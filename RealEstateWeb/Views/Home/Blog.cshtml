@{
    ViewData["Title"] = "Blog";
}
@section Styles {
    <link rel="stylesheet" href="~/css/blog.css" asp-append-version="true" />
}

<section class="blog-hero py-5 text-center text-white">
    <div class="container">
        <h1 class="display-4 fw-bold">Tin tức & Bài viết</h1>
        <p class="lead">Cập nhật thông tin thị trường bất động sản mới nhất</p>
    </div>
</section>

<section class="blog-list py-5">
    <div class="container">
        <div class="row g-4">
            @* Vòng lặp render list bài viết *@
            @for (int i = 1; i <= 6; i++)
            {
                <div class="col-md-4">
                    <div class="blog-card shadow-sm h-100">
                        <img src="~/img/blog@(i).jpg" class="blog-img" alt="blog">
                        <div class="p-3">
                            <h5><a asp-controller="Blog" asp-action="Detail" asp-route-id="@i" class="stretched-link text-dark">Tiêu đề bài viết @i</a></h5>
                            <p class="text-muted small">Ngày @(DateTime.Now.AddDays(-i).ToString("dd/MM/yyyy"))</p>
                            <p class="text-muted">Tóm tắt ngắn gọn nội dung của bài viết…</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
