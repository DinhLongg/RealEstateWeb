@model RealEstateWeb.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5" style="max-width:760px;">
    <div class="row g-0">
        <div class="col-md-6">
            <img src="~/img/cho_mun.jpg" class="img-fluid rounded-start" alt="login" />
        </div>
        <div class="col-md-6">
            <div class="card-body p-4">
                <h2 class="mb-3">Đăng nhập</h2>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info">@TempData["Message"]</div>
                }

                <form asp-action="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        <a asp-action="ForgotPassword" class="btn btn-link">Quên mật khẩu?</a>
                    </div>

                    <hr />
                    <p class="text-center text-muted">Hoặc đăng nhập bằng</p>
                    <!-- External login buttons nếu tích hợp -->
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-danger w-100" href="#">Google</a>
                        <a class="btn btn-outline-primary w-100" href="#">Facebook</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
